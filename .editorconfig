# editorconfig.org
root = true

[*]
# Two spaces indentation.
indent_style = space
indent_size = 2

# Unix end of line.
end_of_line = lf

# Default charset
charset = utf-8

# New line at end of files.
insert_final_newline = true

# Trim trailing whitespace.
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
